@model Product

@{
    ViewData["Title"] = @Model.Name;
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="https://via.placeholder.com/400x400" alt="Product Image" class="img-fluid" />
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <p class="text-muted">@Model.Category</p>
            <h3 class="text-primary">@Model.Price.ToString("c")</h3>
            <p>@Model.Description</p>

            <div class="d-flex justify-content-start my-4">
                <button class="btn btn-primary ">
                    <i class="bi bi-cart"></i> Add to Cart
                </button>
                <a class="btn btn-secondary mx-3"
                asp-controller="Home"
                asp-action="Index"
                asp-route-category="@ViewBag.CurrentCategory"
                >
                    <i class="bi bi-arrow-clockwise"></i> Back
                </a>
            </div>
           
        </div>
    </div>
</div>